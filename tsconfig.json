{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2015",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM", // html document
      "DOM.Iterable" // foreach, for()
    ],
    "skipLibCheck": true, // 
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": false, // myfile -> Myfile.ts
    "noEmit": true, // buhel file 
    /* Linting */
    "strict": true, // type check
    "strictNullChecks": true, // null undefined
    "noUnusedLocals": false, // huvisagchuudiig shalgana
    "noUnusedParameters": true, // function parameteruudiig shalgana myfile(string a, string b)
    // "allowUnusedLabels": true,
    "noFallthroughCasesInSwitch": true, // 
    "paths": {
      "@elements/*": [
        "./src/elements/*"
      ],
      "@formatter/*": [
        "./src/formatter/*"
      ],
      "@storage/*": [
        "./src/storage/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@state/*": [
        "./src/state/*"
      ],
      "@interfaces/*": [
        "src/interfaces/*"
      ],
      "@renderer/*": [
        "src/renderer/*"
      ],
    },
    "types": [
      "@types/wicg-file-system-access"
    ]
  },
  "include": [
    "src"
  ]
}