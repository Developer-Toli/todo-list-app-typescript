{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2016",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM", // html document
      "DOM.Iterable" // foreach, for()
    ],
    "skipLibCheck": true, // 
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": false, // myfile -> Myfile.ts
    "noEmit": true, // buhel file 
    /* Linting */
    "strict": true, // type check
    "strictNullChecks": true, // null undefined
    "noUnusedLocals": true, // huvisagchuudiig shalgana
    "noUnusedParameters": true, // function parameteruudiig shalgana myfile(string a, string b)
    "noFallthroughCasesInSwitch": true // 
  },
  "include": [
    "src"
  ]
}